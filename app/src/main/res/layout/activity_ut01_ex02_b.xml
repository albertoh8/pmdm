<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ut01.Ex02_B.presentation.Ut01Ex02_b"
    android:orientation="vertical"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconSpain"
        android:layout_width="@dimen/size_image3"
        android:layout_height="@dimen/size_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_spain"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@color/white"
        android:padding="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contenido"
        android:textColor="@color/white"
        android:padding="5dp"
        android:maxLines="2"
        android:ellipsize="end"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star"
            android:layout_width="@dimen/size_star"
            android:layout_height="@dimen/size_star"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star2"
            android:layout_width="@dimen/size_star"
            android:layout_height="@dimen/size_star"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star3"
            android:layout_width="@dimen/size_star"
            android:layout_height="@dimen/size_star"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star4"
            android:layout_width="@dimen/size_star"
            android:layout_height="@dimen/size_star"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star5"
            android:layout_width="@dimen/size_star"
            android:layout_height="@dimen/size_star"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/share"
            android:layout_width="@dimen/size_star"
            android:layout_height="@dimen/size_star"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_share"
            android:tint="@color/white"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</LinearLayout>