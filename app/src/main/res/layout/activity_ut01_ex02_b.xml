<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ut01.Ex02_B.presentation.Ut01Ex02_b"
    android:orientation="vertical"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconSpain"
        android:layout_width="@dimen/size_image3"
        android:layout_height="@dimen/size_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_spain"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@color/white"
        android:padding="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_margin="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contenido"
        android:textColor="@color/white"
        android:padding="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star2"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star3"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star4"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_star5"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_star"
            android:layout_margin="5dp"
            android:tint="@color/white"/>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/share"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_share"
            android:tint="@color/white"
            android:layout_margin="5dp"    />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fav"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_favorite"
                android:tint="@color/red"
                android:layout_margin="5dp"    />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>